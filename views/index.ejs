<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
  </head>
  <body>
    <div class="container">
      <h1><%= title %></h1>
      <p>Welcome to <%= title %></p>

      <!-- Folders Section -->
      <% if (folders && folders.length > 0) { %>
      <h2>Folders</h2>
      <div class="grid">
        <% folders.forEach(function(folder) { %>
        <a href="/Adrive/<%= userId %>/<%= folder.id %>" class="folder">
          📁 <br />
          <%= folder.name %>
        </a>
        <form action="/Adrive/share/<%= folder.id %>" method="POST">
          <label for="duration">hours to expiration</label>
          <input type="text" name="duration" />
          <button type="submit">Share Folder</button>
        </form>
        <form action="/Adrive/<%= folder.id %>/delete" method="POST">
          <button type="submit">Delete Folder</button>
        </form>
        <% }); %>
      </div>
      <% } %>

      <!-- Files Section -->
      <% if (loneFiles && loneFiles.length > 0) { %>
      <h2>Files</h2>
      <div class="grid">
        <% loneFiles.forEach(function(file) { %>
        <a href="/Adrive/file/<%= file.id %>/open" class="file">
          📄 <br />
          <%= file.name %>
        </a>
        <a
          href="<%= file.url.replace('/upload/', '/upload/fl_attachment:' + file.name + '/') %>"
          >Download File</a
        >

        <form action="/Adrive/<%= file.id %>/delete" method="POST">
          <button type="submit">Delete File</button>
        </form>
        <% }); %>
      </div>
      <% } %>

      <!-- Actions -->
      <div class="actions">
        <a href="/Adrive/upload/file/<%= userId %>" class="btn btn-upload"
          >Upload File</a
        >
        <a href="/Adrive/upload/folder/<%= userId %>" class="btn btn-folder"
          >Create New Folder</a
        >
      </div>
    </div>
  </body>
</html>
