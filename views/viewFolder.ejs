<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>fOLDER</title>
  </head>
  <body>
    <form action="/Adrive/<%= folderId %>/deleteFiles" method="POST">
      <button type="submit">Delete all files</button>
    </form>
    <% if (files && files.length > 0) { %>
    <h2>Files</h2>
    <div class="grid">
      <% files.forEach(function(file) { %>
      <a href="/Adrive/file/<%= file.id %>/open" class="file">
        📁 <br />
        <%= file.name %>
      </a>
      <form action="/Adrive/<%= file.id %>/delete" method="POST">
        <button type="submit">Delete Message</button>
      </form>
      <% }); %>
    </div>
    <% } %>
  </body>
</html>
